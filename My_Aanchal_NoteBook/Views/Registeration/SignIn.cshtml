                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                    
                </form>
            </div>
            
        </div>
    </div>
</div>



<div class="container-fluid">
    <!-- Mobile Header (Hidden in Desktop View) -->
    <div class="row text-center py-3 bg-light d-lg-none">
        <div class="col-12">
            <img src="~/images/udfclogo-removebg-preview.png" height="80px" width="80px" alt="UDFC Logo" />
            <h5 class="text-danger font-weight-bold mt-2">
                Uttrakhand Co-operative Dairy Federation Ltd. (UDFC)
            </h5>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row min-vh-100">
        <!-- Left Section (Visible in Desktop View) -->
        <div class="col-lg-6 d-none d-lg-block left-section p-0">
            <div class="text-center py-4">
                <img src="~/images/udfclogo-removebg-preview.png" height="100px" width="100px" />
                <h5 class="text-danger font-weight-bold mt-2">
                    Uttrakhand Co-operative Dairy Federation Ltd. (UDFC)
                </h5>
                <h4 class="font-weight-bold text-primary">Track your daily milk supply</h4>
            </div>
            <div class="image-container">
                <img src="~/images/staterimage.jpg" alt="Campus Image" class="img-fluid" />
            </div>
        </div>

        <!-- Right Section -->
        <div class="col-lg-6 col-md-8 col-sm-12 d-flex align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="w-100 px-5">
                <h3 class="text-primary text-center mb-4 font-weight-bold">Login</h3>
                <form method="post" asp-action="SignIn" asp-controller="Registeration" class="user" id="loginForm">
                    <div class="form-group mb-3">
                        <label for="PhoneNumber">Enter Phone Number</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control mb-3" id="phoneNumber" placeholder="Enter Phone Number..." />
                    </div>
                    <div class="form-group d-grid gap-2">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="submit" value="Login" class="btn btn-primary btn-user btn-block mb-2" />
                            </div>
                            <div class="col-md-6">
                                <input type="reset" value="Reset" onclick="Resetphone();" class="btn btn-danger btn-user btn-block" />
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <a href="#" class="small text-primary">Forgot Password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function(){
        $("#loginForm").submit(function (event) {
            event.preventDefault(); // Prevent the default form submission

            var phoneNumber = $("#phoneNumber").val();

            $.ajax({
                url: '@Url.Action("SignIn", "Registeration")',
                type: 'POST',
                data: { phoneNumber: phoneNumber },
                success: function (response) {
                    if (response.success) {
                        // Redirect to Dashboard
                        window.location.href = response.redirectUrl;
                    } else {
                        // Open the SignUp modal
                        $("#signupModal").modal("show");
                        $("#signupModal input[name='PhoneNumber']").val(response.phoneNumber);
                    }
                },
                error: function () {
                    alert("Something went wrong. Please try again.");
                }
            });
        });
    })
    function Resetphone(){
        $("#phoneNumber").val("");
    }


</script>